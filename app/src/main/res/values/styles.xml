<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <!--ActionBar的颜色-->
        <item name="colorPrimary">@color/colorPrimary</item>
        <!--状态栏的颜色 （使用support包时似乎无效。）-->
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <!-- 随主题而改变的颜色（如CheckBox的颜色）-->
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="WelTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
        <!--<item name="android:windowBackground">@mipmap/lancher</item>-->
        <item name="android:windowAnimationStyle">@style/MyWindowAnimTheme</item>
    </style>

    <style name="MyWindowAnimTheme">
        <item name="android:activityOpenEnterAnimation">@anim/anim_in</item>
        <item name="android:activityOpenExitAnimation">@anim/anim_out</item>
        <item name="android:activityCloseEnterAnimation">@anim/anim_in</item>
        <item name="android:activityCloseExitAnimation">@anim/anim_out</item>
        <!-- Customize your theme here. -->
        <!--ActionBar的颜色
        <item name="colorPrimary">@color/white</item>-->
        <!--状态栏的颜色 （使用support包时似乎无效。）
        <item name="colorPrimaryDark">@color/white</item>-->
        <!-- 随主题而改变的颜色（如CheckBox的颜色）
        <item name="colorAccent">@color/orange_q</item>-->
    </style>
</resources>
